{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "allowJs": false,
        "lib": ["es7", "es2015"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./src",
        "declaration": true,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "@utils/*": ["./utils/*"]
        },
        "downlevelIteration": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "config",
        "dist",
        "log",
        "node_modules",
        "tmp"
    ]
}